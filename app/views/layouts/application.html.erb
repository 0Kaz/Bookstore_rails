<!DOCTYPE html>
<html>
  <head>
    <title>Bookstore For The Needy ! | <%= @page_title ? @page_title : "Welcome"  %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
  </head>

  <body>
    <div class="container">
      <%= render 'partials/navbar' %>
    </div>
    <section>
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <%= render 'partials/alert' %>
          <%= yield %>
        </div>
        <div class="col-md-4">
         <%= render 'partials/sidebar' %>
        </div>
      </div>
    </div>
    </section>

    <footer>
      <div class="container">
        <p>Copyright &copy; 2018, All Rights Reserved.</p>
      </div>
    </footer>
  </body>
</html>
