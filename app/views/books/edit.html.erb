<h2><%= @page_title %> </h2>


<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    <% @book.errors.full_messages do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :isbn %>
    <%= f.text_field :isbn, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %><br />
    <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One"}, class: "form-control" %><br /> <br />
  </div>


  <div class="form-group">
    <%= f.label :author %><br />
    <%= f.select :author_id, Author.all.collect {|x| [x.first_name + ' ' + x.last_name , x.id]}, {:include_blank => "Select One"}, class: "form-control" %><br /> <br />
  </div>



  <div class="form-group">
    <%= f.label :publisher %><br />
    <%= f.select :publisher_id, Publisher.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One"}, class: "form-control" %><br /> <br />
  </div>

  <div class="form-group">
    <%= f.label :format %>
    <%= f.text_field :format, class: "form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :coverpath %>
    <%= f.text_field :coverpath, class: "form-control" %>
  </div>



  <div class="form-group">
    <%= f.label :excerpt %>
    <%= f.text_field :excerpt, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :pages %>
    <%= f.text_field :pages, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :buy %>
    <%= f.text_field :buy, class: "form-control"%>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
  <%= link_to "Cancel", books_path, class: "btn btn-default" %>

<% end %>
