<h2><%= @page_title %></h2>

<table class="table table-striped">
  <tr>
      <th>Name</th>
      <th>Actions</th>
  </tr>


  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to "Edit", edit_category_path(category.id) %> | <%= link_to "Delete", category_path(category), method: :delete, data: {confirm: "Are you sure you want to remove it ? "} %></td>
    </tr>
    <% end %>
</table>
